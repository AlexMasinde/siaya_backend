# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=
DB_DATABASE=election_events

# Database SSL Configuration (for DigitalOcean managed databases)
# Set DB_SSL=true for production with DigitalOcean managed databases
